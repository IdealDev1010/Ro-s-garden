<div class="hero-full full-width">
  <div class="container">
 <div class="hero-title">
{{ section.settings.title  }}</div> 
  </div>
</div>

<div class="container-btn">
<a href="{{ section.settings.btn-url  }}" class="button btn hero-btn" target="_blank">
